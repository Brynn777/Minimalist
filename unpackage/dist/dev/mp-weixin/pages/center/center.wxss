
.content {
	text-align: center;
	height: 400rpx;
}
.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 240rpx;  
  color: #fff;  
  display: -webkit-box;  
  display: -webkit-flex;  
  display: flex;  
  -webkit-box-align: center;  
  -webkit-align-items: center;  
          align-items: center; 
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  background-color: #f7f7f7;
}
.userinfo-avatar {  
  overflow:hidden; 
  width: 160rpx;  
  height: 160rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
  margin:0 40rpx;
}
.userinfo-name {
	color: #000000;
	text-align: center;
	padding-right: 120rpx;
	margin:0 40rpx;
}

